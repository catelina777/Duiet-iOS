# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

target 'Duiet' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Duiet
  pod 'R.swift'
  pod 'SwiftLint'
  pod 'RxSwift', '~> 5'
  pod 'RxCocoa', '~> 5'
  pod 'RealmSwift'
  pod "RxRealm"
  pod "RxGesture"
  pod 'YPImagePicker'
  pod 'Hero'

  target 'DuietTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'R.swift'
    pod 'RealmSwift'
    pod "RxRealm"
    pod "RxGesture"
    pod 'RxSwift', '~> 5'
    pod 'RxCocoa', '~> 5'
  end

  target 'DuietUITests' do
    inherit! :search_paths
    # Pods for testing
    pod 'R.swift'
    pod 'RealmSwift'
    pod "RxRealm"
    pod "RxGesture"
    pod 'RxSwift', '~> 5'
    pod 'RxCocoa', '~> 5'
    pod 'YPImagePicker'
    pod 'Hero'
  end

end
